<header>
	<div class="nav">
			<div class="icone">
				<i class="fa-solid fa-cart-shopping" id="panier"></i>
				<i class="fa-solid fa-user" id="omino"></i>
		<div class="showPanier">
			<ul>
				<li><a href="">Mon Panier</a></li>
			</ul>
		</div>
		<div class="show">
			<ul>
				{% if app.user %}
					{% if is_granted('ROLE_ADMIN') %}
					
						<li><a href="{{path('admin')}}">Admin</a></li>
					
					{% endif %}
					<li><a href="{{path('app_logout')}}">Se deconnecter</a></li>
				{% else %}
					
						<li><a href="{{path('app_login')}}">Se connecter</a></li>
					
					
						<li><a href="{{path('app_register')}}">S'inscrire</a></li>
					
				{% endif %}
			</ul>
		</div>
			</div>
		<div class="titre">
			<img src="{{asset('assets/uploads/ramoBig.png')}}" alt="branche d’arbre avec des fleurs roses">
			<img src="{{asset('assets/uploads/logo.png')}}" alt="logo ssite Sandraya">
			<img src="{{asset('assets/uploads/ramoBig.png')}}" alt="branche d’arbre avec des fleurs roses">
		</div>
		<div class="navBar">
			<a href="{{path('app_home')}}">Accueil</a>
			<a href="{{path('app_produits')}}">Produits</a>
			<a href="">Signalibre</a>
		</div>
	</div>
</header>

<div class="flash-message">
	{% for label, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ label }} alert-messages">
				{{ message }}
			</div>
		{% endfor %}
	{% endfor %}
</div>
