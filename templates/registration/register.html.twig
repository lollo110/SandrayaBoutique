{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<h1><canvas class="stitch-title" data-text="4NSCRIPTION"></canvas></h1>
<div id="form-register">

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.portable) }}
        {{ form_row(registrationForm.add_livraison) }}
        {{ form_row(registrationForm.ville) }}
        {{ form_row(registrationForm.code_postal) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
